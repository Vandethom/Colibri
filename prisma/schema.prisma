// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {    
  firstName       String
  lastName        String
  email           String        @unique
  password        String
  recipes         Recipe[]

  isAdmin         Boolean
  uuid            String        @id @default(uuid())
}   

model Category { 
  uuid              String        @id @default(uuid())
  recipes           Recipe[]
}

model Ingredient {
  uuid            String        @id @default(uuid())
  name            String        @unique
  recipes         Recipe[]
}   

model Recipe {    
  uuid            String        @id @default(uuid())
  author          User          @relation(fields: [authorUuid], references: [uuid])
  authorUuid      String

  title           String
  descriptions    String
  preparationTime Int           @default(0)

  categories      Category[]
  ingredients     String
  steps           String        @db.VarChar(12000)

  vegan           Boolean
  porkFree        Boolean
  glutenFree      Boolean

  created_at      DateTime      @default(now())
  updated_at      DateTime      @updatedAt
}
