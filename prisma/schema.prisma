// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {    
  firstName       String
  lastName        String
  email           String        @unique
  password        String
  recipes         Recipe[]

  isAdmin         Boolean
  uuid            String        @id @default(uuid())
}   

model Ingredient {
  uuid            String        @id @default(uuid())
  name            String
  recipes         Recipe[]
}   

model Recipe {    
  uuid            String        @id @default(uuid())
  author          User          @relation(fields: [authorId], references: [uuid])
  authorId        String

  name            String
  steps           String        @db.VarChar(12000)
  ingredients     Ingredient[]

  vegan           Boolean
  porkFree        Boolean
  glutenFree      Boolean

  created_at      DateTime      @default(now())
  updated_at      DateTime      @updatedAt
}